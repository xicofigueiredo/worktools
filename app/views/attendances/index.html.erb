<div class="mx-5 mt-3">
  <div class="d-flex d-flex justify-content-between mb-3 align-items-center">
    <div class="d-flex flex-md-row flex-column gap-0 gap-md-5">
      <div class="d-flex gap-5 ">
        <h1><%= @time_frame %> Attendance</h1>
      </div>
      <div class="d-flex gap-2">
        <%= link_to '<i class="fa-solid fa-chevron-left"></i>'.html_safe, attendances_path(date: @prev_date, time_frame: 'weekly'), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
        <%= link_to 'This Week', attendances_path(date: Date.today, time_frame: 'weekly'), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
        <%= link_to '<i class="fa-solid fa-chevron-right"></i>'.html_safe, attendances_path(date: @next_date, time_frame: 'weekly'), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
      </div>
    </div>
    <div class="text-end">
        <%= link_to 'Daily', attendance_path() %>
    </div>
  </div>
  <%= render 'weekly' %>
</div>
