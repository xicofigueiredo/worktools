<div class="mx-5 mt-3">
  <div class="d-flex justify-content-between mb-3 align-items-center position-relative">

    <div class="d-flex">
      <h3><%= @current_date.strftime("%A, %B %e") %></h3>
    </div>

    <div class="d-flex gap-2 position-absolute top-50 start-50 translate-middle">
      <%= link_to '<i class="fa-solid fa-chevron-left"></i>'.html_safe, attendance_path(date: @prev_date), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
      <%= link_to 'Today', attendance_path(date: Date.today), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
      <%= link_to '<i class="fa-solid fa-chevron-right"></i>'.html_safe, attendance_path(date: @next_date), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
    </div>

    <div class="text-end">
        <%= link_to 'Weekly', attendances_path(time_frame: 'weekly'), class: "btn btn-outline-secondary" %>
    </div>

  </div>
  <div class="overflow-x-auto">
    <% if @isweekend %>
      <div class="my-5 text-center">
        <h1>There is not attendance on weekends..</h1>
        <p>You can switch to weekly view to view this weeks attendance.</p>
      </div>
    <% else %>
      <%= render 'daily' %>
    <% end %>
  </div>
</div>
