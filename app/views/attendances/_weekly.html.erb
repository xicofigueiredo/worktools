<% @daily_grouped_attendances.each do |date, attendances| %>
  <h3><%= date.strftime("%A, %B %e") %></h3>
  <table class="table">
    <thead>
      <tr class="table-primary">
        <th scope="col">Learner Name</th>
        <th scope="col">Start Time</th>
        <th scope="col">End Time</th>
        <th scope="col">Comments</th>
        <th scope="col">Presence</th>
      </tr>
    </thead>
    <tbody>
      <% attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.user.full_name %></td>
          <%= form_tag update_time_attendance_path(attendance), method: :patch, class: "time-edit-form" do %>
            <td>
                <%= time_field_tag :start_time, attendance.start_time&.strftime("%H:%M"), class: "form-control" %>
            </td>
            <td>
                <%= time_field_tag :end_time, attendance.end_time&.strftime("%H:%M"), class: "form-control" %>
                <%= submit_tag "Update Times", class: "btn btn-info mt-2" %>
            </td>
          <% end %>
          <td>
            <%= form_with(model: attendance, url: patch_attendance_comment_path(attendance), local: true, method: :patch) do |form| %>
              <%= form.text_area :comments, class: "form-control", rows: 3 %>
              <%= form.submit "Save Comment", class: "btn btn-primary" %>
            <% end %>
          </td>
          <td>
            <%= form_tag(update_absence_attendance_path(attendance), method: :patch) do %>
              <%= select_tag 'absence', options_for_select(['Justified Leave', 'Unjustified Leave', 'Holiday', 'Present'], attendance.absence), class: 'form-control', onchange: 'this.form.submit()' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
