<div class="mx-5 mt-3">
  <h1><%= @learner.full_name %></h1>

  <table class="table">
    <thead>
      <tr class="table-primary">
        <th scope="col">Date</th>
        <th scope="col">Start Time</th>
        <th scope="col">End Time</th>
        <th scope="col">Comments</th>
        <th scope="col">Present</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |attendance|%>
        <tr>
          <td><p><%= attendance.attendance_date%></p></td>
          <td>
            <% if attendance.start_time? %>
              <p><%= attendance.start_time.strftime("%H:%M")%>H</p>
            <% else %>
              <p>N/A</p>
            <% end %>
          </td>
          <td>
            <% if attendance.end_time? %>
              <p><%= attendance.end_time.strftime("%H:%M")%>H</p>
            <% else %>
              <p>N/A</p>
            <% end %>
          </td>
          <td>
            <%= form_with(model: attendance, url: patch_attendance_comment_path(attendance), local: true, method: :patch) do |form| %>
              <%= form.text_area :comments, class: "form-control", rows: 3, id: "comment-field" %>
              <%= form.submit "Save Comment", class: "btn btn-primary" %>
            <% end %>
          </td>
          <td>
          <% if attendance.present? %>
            <i class="fa-solid fa-check"></i>
          <% else %>
            <i class="fa-solid fa-x"></i>
          <% end %>
          </td>
        </tr>
      <% end%>
    </tbody>
  </table>
  <%= link_to 'Back', attendance_path() %>
</div>
