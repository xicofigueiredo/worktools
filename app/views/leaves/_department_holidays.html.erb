<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2 class="h5 mb-0">Department Holidays for <%= @month.strftime('%B %Y') %></h2>
    <div>
      <%= link_to 'Previous Month', leaves_path(month: @prev_month.strftime('%Y-%m-01'), active_tab: 'manager'), class: 'btn btn-link btn-sm me-2' %>
      <%= link_to 'Next Month', leaves_path(month: @next_month.strftime('%Y-%m-01'), active_tab: 'manager'), class: 'btn btn-link btn-sm' %>
    </div>
  </div>

  <div class="card-body p-0">
    <%
      # 1. Filter valid leaves
      valid_leaves = @department_leaves.select { |l| l.status.in?(%w[pending approved]) }

      # 2. Separate Mandatory vs Regular
      mandatory_leaves_list = valid_leaves.select { |l| l.mandatory_leave_id.present? }
      regular_leaves_list = valid_leaves.reject { |l| l.mandatory_leave_id.present? }

      # 3. Group Mandatory by the parent MandatoryLeave object
      grouped_mandatory = mandatory_leaves_list.group_by(&:mandatory_leave).map do |parent, leaves|
        leaves.first
      end

      # 4. Combine for display (Sorted by date)
      display_list = (grouped_mandatory + regular_leaves_list).sort_by(&:start_date)
    %>

    <% if display_list.any? %>
      <div class="table-responsive">
        <table class="table mb-0">
          <thead class="table-light">
            <tr>
              <th>Department</th>
              <th>Name</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Total Days Used</th>
              <th>Type of Leave</th>
              <th class="text-center">Notes / Impediments</th>
              <th class="text-center">Docs</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% display_list.each do |leave| %>
              <tr class="<%= 'table-light' if leave.mandatory_leave_id.present? %>">

                <td>
                  <% if leave.mandatory_leave_id.present? %>
                    <% if leave.mandatory_leave.global %>
                      <span class="badge bg-secondary">Global</span>
                    <% else %>
                      <span class="badge bg-secondary">LC/CM</span>
                    <% end %>
                  <% else %>
                    <%= leave.user.departments.first&.name || 'â€”' %>
                  <% end %>
                </td>

                <td>
                  <% if leave.mandatory_leave_id.present? %>
                    <strong><%= leave.mandatory_leave.name %></strong>
                  <% else %>
                    <%= leave.user.full_name %>
                  <% end %>
                </td>

                <td><%= leave.start_date.strftime("%d/%m/%Y") %></td>
                <td><%= leave.end_date.strftime("%d/%m/%Y") %></td>
                <td><%= leave.total_days %></td>
                <td><%= leave.leave_type.capitalize %></td>

                <td class="text-center">
                  <% if leave.mandatory_leave_id.present? %>
                    -
                  <% else %>
                    <div class="d-flex justify-content-center gap-1">
                      <% if leave.exception_requested && leave.exception_approver_messages.any? %>
                        <% tooltip_lines = leave.exception_approver_messages.dup %>
                        <% tooltip_lines << "Justification: #{leave.exception_reason}" if leave.exception_reason.present? %>
                        <span class="badge bg-info text-dark" data-bs-toggle="tooltip" title="<%= h(tooltip_lines.join(' | ')) %>">i</span>
                      <% end %>
                      <% if leave.notes.present? %>
                        <span class="badge bg-primary" data-bs-toggle="tooltip" title="Notes: <%= h(leave.notes) %>">i</span>
                      <% end %>
                    </div>
                    <% if !leave.exception_requested && leave.exception_approver_messages.empty? && leave.notes.blank? %>
                      -
                    <% end %>
                  <% end %>
                </td>

                <td class="text-center">
                  <% if leave.mandatory_leave_id.present? %>
                    -
                  <% else %>
                    <% if leave.staff_leave_documents.any? %>
                      <% documents = leave.staff_leave_documents %>
                      <% if documents.size == 1 %>
                        <% doc = documents.first %>
                        <%= link_to download_document_leafe_path(leave, doc.id),
                                    title: "Download document",
                                    class: "btn btn-sm btn-outline-primary",
                                    target: "_blank",
                                    rel: "noopener" do %>
                          <i class="fa fa-download" aria-hidden="true"></i>
                        <% end %>
                      <% else %>
                        <div class="btn-group" role="group">
                          <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle"
                                  data-bs-toggle="dropdown"
                                  aria-expanded="false"
                                  title="Download documents">
                            <i class="fa fa-download" aria-hidden="true"></i>
                          </button>
                          <ul class="dropdown-menu">
                            <% documents.each_with_index do |doc, index| %>
                              <li>
                                <%= link_to "Document #{index + 1}",
                                            download_document_leafe_path(leave, doc.id),
                                            class: "dropdown-item",
                                            target: "_blank",
                                            rel: "noopener" %>
                              </li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                    <% else %>
                      -
                    <% end %>
                  <% end %>
                </td>

                <td>
                  <% if leave.mandatory_leave_id.present? %>
                    <span class="badge bg-success">Mandatory</span>
                  <% else %>
                    <%= leave.status.capitalize %>
                  <% end %>
                </td>

              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="card-body">
        <p class="mb-0">No holidays this month.</p>
      </div>
    <% end %>
  </div>
</div>
