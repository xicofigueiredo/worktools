<div id="pending-leaves-container" data-controller="leave confirmation">
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="h5 mb-0">Pending Confirmations</h2>
      <small class="text-muted"><%= pluralize(@pending_confirmations.count, "pending confirmation") %></small>
    </div>

    <div class="card-body p-0">
      <% if @pending_confirmations.any? %>
        <div class="table-responsive">
          <table class="table mb-0 align-middle">
            <thead class="table-light">
              <tr>
                <th>Department</th>
                <th>Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Days</th>
                <th>Type</th>
                <th class="text-center">Notes</th>
                <th class="text-nowrap">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_confirmations.each do |conf| %>
                <% leave = conf.confirmable %>
                <tr id="confirmation-<%= conf.id %>">
                  <td><%= leave.user.departments.first&.name || '—' %></td>
                  <td><%= leave.user.full_name %></td>
                  <td><%= leave.start_date.strftime("%d/%m/%Y") %></td>
                  <td><%= leave.end_date.strftime("%d/%m/%Y") %></td>
                  <td><%= leave.total_days %></td>
                  <td><%= leave.leave_type.humanize %></td>
                  <td class="text-center text-muted"><small><%= leave.notes.presence || '—' %></small></td>
                  <td class="text-nowrap">
                    <div class="d-flex gap-2">
                      <%= button_to approve_confirmation_path(conf), method: :post, class: "btn btn-sm btn-success" do %>
                        <i class="fa-solid fa-check"></i>
                      <% end %>

                      <button type="button"
                              class="btn btn-sm btn-outline-danger"
                              data-action="click->confirmation#openRejectModal"
                              data-url="<%= reject_confirmation_path(conf) %>">
                        <i class="fa-solid fa-xmark"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="card-body">
          <p class="mb-0 text-muted">No pending leave confirmations.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/rejection_modal', title: "Reject Leave Request" %>
