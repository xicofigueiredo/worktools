<div class="container-fluid px-3 my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">New Leave Request</h1>
    <%= link_to 'Back to list', leaves_path, class: 'btn btn-link' %>
  </div>

  <% if @staff_leave && @staff_leave.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @staff_leave.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'form', staff_leave: @staff_leave %>
</div>
