
<%= simple_form_for([@learner, @note]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs mb-3">
    <div class="mb-3">
      <div class="mb-2">
        <%= f.label :category %>
      </div>
      <%= f.select :category, ['Behaviour', 'Knowledge', 'Skills & Community', 'Parents'], {}, { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.label :topic %>
      <%= f.text_area :topic, class: 'form-control', rows: 3 %>
    </div>

    <%= f.label :follow_up_action %>
    <%= f.text_area :follow_up_action, class: 'form-control', rows: 1 %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
