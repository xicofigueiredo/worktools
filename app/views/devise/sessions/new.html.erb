<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card text-black" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">LOGIN</h2>
              <p class="text-black-50 mb-5">Please enter your credentials</p>

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-outline form-black mb-4">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: { class: "form-control form-control-lg", autocomplete: "email" } %>
                </div>

                <div class="form-outline form-white mb-4" data-controller="password-toggle">
                  <%= f.input :password,
                              required: false,
                              input_html: { class: "form-control form-control-lg",
                                            autocomplete: "current-password",
                                            type: "password",
                                            id: "password",
                                            data: { password_toggle_target: "password" } } %>
                  <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"
                        data-action="click->password-toggle#toggle"
                        data-password-toggle-target="icon"></span>
                </div>
                <%= f.button :submit, "Login", class: "btn btn-lg btn-outline-success px-5 rounded-pill shadow-sm" %>

              <% end %>

            </div>

              <p class="small mb-5 pb-lg-2"><%= link_to "Forgot password?", new_user_password_path, class: "text-black-50" %> </p>
              <p class="mb-0">Don't have an account? <%= link_to "Sign Up", new_registration_path(resource_name), class: "btn btn-lg btn-outline-info px-3 rounded-pill shadow-sm" %></p>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'devise/shared/see_password' %>
