<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card text-black" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h3 class="fw-bold mb-2 text-uppercase">Change your password</h3>
              <p class="text-black-50 mb-5">Please enter your new password and confirm it below.</p>

              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>

                <%= f.input :reset_password_token, as: :hidden, input_html: { value: params[:reset_password_token] } %>
                <br>
                <div class="form-outline form-black mb-4">
                  <%= f.input :password,
                              label: "New password",
                              required: true,
                              autofocus: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { class: "form-control form-control-lg", autocomplete: "new-password" } %>
                </div>

                <div class="form-outline form-black mb-4">
                  <%= f.input :password_confirmation,
                              label: "Confirm your new password",
                              required: true,
                              input_html: { class: "form-control form-control-lg", autocomplete: "new-password" } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Change my password", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
