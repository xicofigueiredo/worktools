<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-3 col-lg-6 col-xl-5">
        <div class="card text-black" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-2 mt-md-1 pb-5">

              <h2 class="fw-bold mb-1 text-uppercase">Update Password</h2>
              <p class="text-black-50 mb-2">Please update your password below.</p>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>

                <div class="form-outline form-black mb-2">
                  <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control form-control-lg", autocomplete: "email" } %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>

                <div class="form-outline form-black mb-4" data-controller="password-toggle">
                  <%= f.input :current_password,
                              hint: "We need your current password to confirm your changes",
                              required: true,
                              input_html: { class: "form-control form-control-lg", autocomplete: "current-password" } %>
                  <span class="fa fa-fw fa-eye field-icon toggle-password"
                        data-action="click->password-toggle#toggle"
                        data-password-toggle-target="icon"
                        toggle="#"></span>
                </div>

                <div class="form-outline form-black mb-2 align-items-center" data-controller="password-toggle">
                  <%= f.input :password,
                              required: false,
                              input_html: { class: "form-control form-control-lg",
                                            autocomplete: "new-password",
                                            type: "password",
                                            id: "password",
                                            data: { password_toggle_target: "password" } } %>
                  <span class="fa fa-fw fa-eye field-icon toggle-password"
                        data-action="click->password-toggle#toggle"
                        data-password-toggle-target="icon"
                        toggle="#password"></span>
                </div>

                <div class="form-outline form-black mb-2" data-controller="password-toggle">
                  <%= f.input :password_confirmation,
                              required: false,
                              input_html: { class: "form-control form-control-lg",
                                            autocomplete: "new-password",
                                            type: "password",
                                            id: "password_confirmation",
                                            data: { password_toggle_target: "password" } } %>
                  <span class="fa fa-fw fa-eye field-icon toggle-password"
                        data-action="click->password-toggle#toggle"
                        data-password-toggle-target="icon"
                        toggle="#password_confirmation"></span>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Update", class: "btn btn-lg btn-outline-success px-5 rounded-pill shadow-sm" %>
                </div>
              <% end %>

            </div>

            <div>
              <%= link_to "Back", :back, class: "text-black-50 fw-bold" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
