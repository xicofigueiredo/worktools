
  <!-- Card Content -->
    <% @forms.each do |form| %>
  <div class="container">
      <div class="card">
        <h2><%= form.title %></h2>
        <p>Scheduled: <%= form.scheduled_date.strftime("%B %d, %Y") %></p>

        <% if form.completed_by?(current_user) %>
          <span class="badge completed">Completed</span>
        <% else %>
          <%= link_to "Complete Form", form_path(form), class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .container {
      flex: 1; /* Ensures the content takes up available space */
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      padding: 40px; /* Increased padding for a larger card */
      max-width: 600px; /* Slightly wider */
      width: 90%;
      text-align: center;
    }

    .card h1 {
      color: #333;
      margin-bottom: 20px;
      font-size: 2rem; /* Larger font for the title */
    }

    .card p {
      color: #555;
      line-height: 1.6;
      margin-bottom: 30px;
      font-size: 1.1rem; /* Slightly larger text */
    }

    .card a {
      display: inline-block;
      padding: 15px 25px; /* Larger button */
      background-color: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      font-size: 1rem;
    }

    .card a:hover {
      background-color: #0056b3;
    }
  </style>
