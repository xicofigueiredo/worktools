<%= content_for :title, "Preview Statement - #{@exam_finance.user.full_name}" %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Exam Enrollments Preview</h5>
      <div>
        <%= link_to "Back", exam_finance_path(@exam_finance), class: 'btn btn-secondary btn-sm' %>
        <%= link_to "Generate PDF", generate_statement_exam_finance_path(@exam_finance), class: 'btn btn-primary btn-sm' %>
      </div>
    </div>

    <div class="card-body p-0">
      <% if @exam_enrolls.any? %>
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th>Subject</th>
              <th>Code</th>
              <th>Qualification</th>
              <th>Papers</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @exam_enrolls.each do |enroll| %>
              <tr>
                <td><%= enroll.subject_name %></td>
                <td><%= enroll.code %></td>
                <td><%= enroll.qualification %></td>
                <td><%= enroll.specific_papers.presence || "N/A" %></td>
                <td><%= enroll.status %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="4" class="text-end fw-bold">Total Cost:</td>
              <td class="fw-bold"><%= @exam_finance.total_cost %>â‚¬</td>
            </tr>
          </tfoot>
        </table>
      <% else %>
        <div class="p-3">
          <p class="text-muted mb-0">No exam enrollments found.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
