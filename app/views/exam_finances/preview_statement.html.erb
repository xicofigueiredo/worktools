<%= content_for :title, "Preview Statement - #{@exam_finance.user.full_name}" %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Exam Enrollments Preview</h5>
      <div>
        <%= link_to "Back", exam_finance_path(@exam_finance), class: 'btn btn-secondary btn-sm' %>
        <%= form_tag generate_statement_exam_finance_path(@exam_finance),
            method: :get,
            target: '_blank',
            class: 'd-inline-block',
            data: { turbo: false },
            id: 'generate-pdf-form' do %>
          <%= hidden_field_tag 'selected_enrolls', '', id: 'selected-enrolls-input' %>
          <%= submit_tag "Generate PDF", class: 'btn btn-primary btn-sm' %>
        <% end %>
      </div>
    </div>

    <div class="card-body p-0">
      <% if @exam_enrolls.any? %>
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th>Subject</th>
              <th>Code</th>
              <th>Papers</th>
              <th>Cost</th>
              <th>Status</th>
              <th>
                <input type="checkbox" id="select-all" class="form-check-input">
              </th>
            </tr>
          </thead>
          <tbody>
            <% @exam_enrolls.each do |enroll| %>
              <tr>
                <td><%= enroll.subject_name %></td>
                <td><%= enroll.code %></td>
                <td>
                  <% if enroll.specific_papers.present? %>
                    <div class="mt-2">
                      <% (1..5).each do |i| %>
                        <% if enroll.send("paper#{i}").present? %>
                          <div class="small">
                            <%= enroll.send("paper#{i}") %>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  <% else %>
                    N/A
                  <% end %>
                </td>
                <td>
                  <% if enroll.qualification == "IGCSE" %>
                    200
                  <% elsif enroll.qualification == "A Level" && (enroll.specific_papers == nil || enroll.specific_papers == "") %>
                    300
                  <% elsif enroll.qualification == "AS" && (enroll.specific_papers == nil || enroll.specific_papers == "") %>
                    150
                  <% elsif enroll.qualification == "A2" && (enroll.specific_papers == nil || enroll.specific_papers == "") %>
                    150
                  <% elsif enroll.specific_papers != nil && enroll.specific_papers != "" %>
                    <% (1..5).each do |i| %>
                      <% if enroll.send("paper#{i}_cost").present? %>
                        <div class="small">
                          <%= enroll.send("paper#{i}_cost").to_i %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= enroll.status %></td>
                <td>
                  <input type="checkbox"
                         class="form-check-input exam-enroll-checkbox"
                         value="<%= enroll.id %>">
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="5" class="text-end fw-bold">Total Cost:</td>
              <td class="fw-bold"><%= @exam_finance.total_cost %>â‚¬</td>
            </tr>
          </tfoot>
        </table>

        <%# Add JavaScript to handle checkbox selection %>
        <script>
          function initializeCheckboxes() {
            const selectAllCheckbox = document.getElementById('select-all');
            const examEnrollCheckboxes = document.querySelectorAll('.exam-enroll-checkbox');
            const selectedEnrollsInput = document.getElementById('selected-enrolls-input');
            const generatePdfForm = document.getElementById('generate-pdf-form');

            // Function to update hidden input with selected enrolls
            function updateSelectedEnrolls() {
              const selectedEnrolls = Array.from(examEnrollCheckboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.value);
              selectedEnrollsInput.value = selectedEnrolls.join(',');
            }

            // Initialize with empty selection
            updateSelectedEnrolls();

            // Handle select all checkbox
            selectAllCheckbox.addEventListener('change', function() {
              examEnrollCheckboxes.forEach(cb => {
                cb.checked = this.checked;
              });
              updateSelectedEnrolls();
            });

            // Handle individual checkboxes
            examEnrollCheckboxes.forEach(cb => {
              cb.addEventListener('change', function() {
                updateSelectedEnrolls();
                // Update select all checkbox state
                selectAllCheckbox.checked = Array.from(examEnrollCheckboxes)
                  .every(checkbox => checkbox.checked);
              });
            });

            // Set initial state of select all checkbox (unchecked)
            selectAllCheckbox.checked = false;
          }

          // Initialize on both DOMContentLoaded and turbo:load
          document.addEventListener('DOMContentLoaded', initializeCheckboxes);
          document.addEventListener('turbo:load', initializeCheckboxes);
          document.addEventListener('turbo:render', initializeCheckboxes);
        </script>
      <% else %>
        <div class="p-3">
          <p class="text-muted mb-0">No exam enrollments found.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
