<%= content_for :title, "Preview Statement - #{@exam_finance.user.full_name}" %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Exam Enrollments Preview</h5>
      <div>
        <%= link_to "Back", exam_finance_path(@exam_finance), class: 'btn btn-secondary btn-sm' %>
        <%= form_tag generate_statement_exam_finance_path(@exam_finance),
            method: :get,
            target: '_blank',
            class: 'd-inline-block',
            data: { turbo: false },
            id: 'generate-pdf-form' do %>
          <%= hidden_field_tag 'selected_enrolls', '', id: 'selected-enrolls-input' %>
          <%= submit_tag "Generate PDF", class: 'btn btn-primary btn-sm' %>
        <% end %>
      </div>
    </div>

    <div class="card-body p-0">
      <% if @exam_enrolls.any? %>
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th>Subject</th>
              <th>Code</th>
              <th>Papers</th>
              <th>Cost</th>
              <th>Status</th>
              <th>
                <input type="checkbox" id="select-all" class="form-check-input">
              </th>
            </tr>
          </thead>
          <tbody>
            <% @exam_enrolls.each do |enroll| %>
              <tr>
                <td><%= enroll.subject_name %></td>
                <td><%= enroll.code %></td>
                <td>
                  <% if enroll.specific_papers.present? %>
                    <div class="mt-2">
                      <% (1..5).each do |i| %>
                        <% if enroll.send("paper#{i}").present? %>
                          <div class="small">
                            <%= enroll.send("paper#{i}") %>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  <% else %>
                    N/A
                  <% end %>
                </td>
                <td>
                  <%= calculate_total_cost([enroll]) %> <%= @exam_finance.currency %>
                </td>
                <td><%= enroll.status %></td>
                <td>
                  <input type="checkbox"
                         class="form-check-input exam-enroll-checkbox"
                         value="<%= enroll.id %>">
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="5" class="text-end fw-bold">Manual Total Cost:</td>
              <td class="fw-bold">
                <%= form_with(model: @exam_finance,
                            local: false,
                            class: 'd-flex gap-2 align-items-center',
                            data: {
                              turbo: false,
                              remote: true
                            }) do |f| %>
                  <div class="input-group input-group-sm">
                    <%= f.number_field :total_cost,
                        class: 'form-control text-end',
                        style: 'width: 80px;',
                        onchange: 'this.form.requestSubmit()'
                    %>
                  </div>
                  <div id="cost-update-message" class="text-success" style="display: none;">
                    Updated!
                  </div>
                <% end %>
              </td>
            </tr>
            <tr>
              <td colspan="5" class="text-end text-muted">Total Cost:</td>
              <td class="text-muted"><%= calculate_total_cost(@exam_enrolls) %> <%= @exam_finance.currency || 'EUR' %></td>
            </tr>
          </tfoot>
        </table>

        <div class="mt-4">
          <%= form_with(model: @exam_finance,
                      local: false,
                      class: 'comments-form',
                      data: {
                        turbo: false
                      }) do |f| %>
            <div class="mb-3">
              <%= f.label :comments, "Additional Comments", class: "form-label fw-bold" %>
              <%= f.text_area :comments,
                  class: 'form-control',
                  rows: 4,
                  placeholder: "Enter any additional comments to be included in the Statement of Entry...",
                  onchange: 'this.form.requestSubmit()'
              %>
            </div>
            <div id="comments-update-message" class="text-success" style="display: none;">
              Comments updated!
            </div>
          <% end %>
        </div>

        <%# Add JavaScript to handle checkbox selection %>
        <script>
          function initializeCheckboxes() {
            const selectAllCheckbox = document.getElementById('select-all');
            const examEnrollCheckboxes = document.querySelectorAll('.exam-enroll-checkbox');
            const selectedEnrollsInput = document.getElementById('selected-enrolls-input');
            const generatePdfForm = document.getElementById('generate-pdf-form');

            // Function to update hidden input with selected enrolls
            function updateSelectedEnrolls() {
              const selectedEnrolls = Array.from(examEnrollCheckboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.value);
              selectedEnrollsInput.value = selectedEnrolls.join(',');
            }

            // Initialize with empty selection
            updateSelectedEnrolls();

            // Handle select all checkbox
            selectAllCheckbox.addEventListener('change', function() {
              examEnrollCheckboxes.forEach(cb => {
                cb.checked = this.checked;
              });
              updateSelectedEnrolls();
            });

            // Handle individual checkboxes
            examEnrollCheckboxes.forEach(cb => {
              cb.addEventListener('change', function() {
                updateSelectedEnrolls();
                // Update select all checkbox state
                selectAllCheckbox.checked = Array.from(examEnrollCheckboxes)
                  .every(checkbox => checkbox.checked);
              });
            });

            // Set initial state of select all checkbox (unchecked)
            selectAllCheckbox.checked = false;
          }

          // Initialize on both DOMContentLoaded and turbo:load
          document.addEventListener('DOMContentLoaded', initializeCheckboxes);
          document.addEventListener('turbo:load', initializeCheckboxes);
          document.addEventListener('turbo:render', initializeCheckboxes);
        </script>
      <% else %>
        <div class="p-3">
          <p class="text-muted mb-0">No exam enrollments found.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('turbo:load', function() {
    // Handle cost form
    const costForm = document.querySelector('form:not(.comments-form)');
    const costMessage = document.getElementById('cost-update-message');

    if (costForm && costMessage) {
      costForm.addEventListener('ajax:success', function(event) {
        costMessage.style.display = 'inline';
        setTimeout(() => {
          costMessage.style.display = 'none';
        }, 2000);
      });

      costForm.addEventListener('ajax:error', function() {
        alert('Error updating total cost');
      });
    }

    // Handle comments form
    const commentsForm = document.querySelector('.comments-form');
    const commentsMessage = document.getElementById('comments-update-message');

    if (commentsForm && commentsMessage) {
      commentsForm.addEventListener('ajax:success', function() {
        commentsMessage.style.display = 'inline';
        setTimeout(() => {
          commentsMessage.style.display = 'none';
        }, 2000);
      });

      commentsForm.addEventListener('ajax:error', function() {
        alert('Error updating comments');
      });
    }
  });
</script>
