<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Exam Finances</h1>
    <%= link_to 'New Exam Finance', new_exam_finance_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Learner</th>
          <th>Total Cost</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @exam_finances.each do |exam_finance| %>
          <tr>
            <td><%= exam_finance.user.full_name %></td>
            <td><%= number_to_currency(exam_finance.total_cost, unit: "â‚¬") %></td>
            <td>
              <%= link_to 'Show', exam_finance_path(exam_finance), class: 'btn btn-sm btn-info me-2' %>
              <%= link_to 'Edit', edit_exam_finance_path(exam_finance), class: 'btn btn-sm btn-warning me-2' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
