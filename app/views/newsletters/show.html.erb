
<h1><%= @newsletter.title %></h1>

<p class="text-muted">
  Published on <%= @newsletter.published_at.strftime("%B %d, %Y") %>
</p>

<div class="newsletter-content">
  <!-- If using ActionText, this will display the rich text content -->
  <%= @newsletter.content %>
</div>

<hr>

<div class="newsletter-filters mt-3">
  <% if @newsletter.filter_country.present? %>
    <p><strong>Country:</strong> <%= @newsletter.filter_country %></p>
  <% end %>
  <% if @newsletter.filter_role.present? %>
    <p><strong>Role:</strong> <%= @newsletter.filter_role %></p>
  <% end %>
  <% if @newsletter.filter_level.present? %>
    <p><strong>Level:</strong> <%= @newsletter.filter_level %></p>
  <% end %>
  <% if @newsletter.filter_region.present? %>
    <p><strong>Region:</strong> <%= @newsletter.filter_region %></p>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "Edit", edit_newsletter_path(@newsletter), class: "btn btn-secondary" %>
  <%= link_to "Back to Newsletters", newsletters_path, class: "btn btn-primary" %>
</div>
