<h1>Edit Topic</h1>

<%= form_with(model: [@subject, @topic], local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :time %>
  <%= form.number_field :time %>

  <%= form.label :done %>
  <%= form.check_box :done %>

  <%= form.submit "Update Topic" %>
<% end %>

<%= link_to 'Back', :back%>
