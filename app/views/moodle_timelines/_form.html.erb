<section>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card" data-controller="timeline-form" data-timeline-form-exam-dates="<%= @exam_dates.to_json %>">
          <div class="card-body">
            <% if @edit %>
              <h2 class="card-title text-center mb-4">Edit Timeline</h2>
            <% else %>
              <h2 class="card-title text-center mb-4">New Timeline</h2>
            <% end %>

            <%= form_with(model: @moodle_timeline) do |form| %>
              <!-- Error Messages -->
              <div id="error_explanation" class="alert alert-danger" data-timeline-form-target="error"></div>
              <% if @moodle_timeline.errors.any? %>
                <div id="error_explanation" class="alert alert-danger">
                  <h4><%= pluralize(@moodle_timeline.errors.count, "error") %> prohibited this timeline from being saved:</h4>
                  <ul>
                    <% @moodle_timeline.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <!-- Subject Selection -->
              <% if @edit %>
                <div class="form-group">
                  <%= form.label :subject_id %>
                  <%= form.collection_select :subject_id, @subjects, :id, :name,
                        { disabled: @subjects_with_timeline_ids },
                        { class: 'form-control', disabled: true, data: { "timeline-form-target": "subject" } } %>
                </div>
              <% else %>
                <div class="form-group">
                  <%= form.label :subject_id %>
                  <%= form.collection_select :subject_id, @subjects, :id, :name,
                        { disabled: @subjects_with_timeline_ids },
                        { class: 'form-control', data: { "timeline-form-target": "subject" } } %>
                </div>
              <% end %>

              <!-- Start Date -->
              <div class="form-group">
                <%= form.label :start_date %>
                <%= form.date_field :start_date, class: 'form-control',
                      min: @min_date, max: @max_date, required: true,
                      data: { "timeline-form-target": "startDate" } %>
              </div>
              <br>

              <!-- Exam Date -->
              <% if @edit %>
                <div class="form-group">
                  <%= form.label :exam_date, "Exam Date" %>
                  <%= form.collection_select :exam_date_id, @exam_dates_edit, :id, lambda { |exam_date|
                        if exam_date.date.month == 5 || exam_date.date.month == 6
                          "May/June #{exam_date.date.year}"
                        elsif exam_date.date.month == 10 || exam_date.date.month == 11
                          "Oct/Nov #{exam_date.date.year}"
                        else
                          exam_date.date.strftime("%B %Y")
                        end
                      },
                      { include_blank: true, selected: @selected_exam_date_id },
                      { class: 'form-control' } %>
                </div>
              <% else %>
                <div class="form-group">
                  <%= form.label :exam_date %>
                  <%= form.collection_select :exam_date_id, [], :id, :name,
                        { include_blank: true },
                        { class: 'form-control', data: { target: "timeline-form.examDate" } } %>
                </div>
              <% end %>



              <!-- End Date -->
              <div class="form-group">
                <%= form.label :end_date %>
                <%= form.date_field :end_date, class: 'form-control',
                      min: @min_date, max: @max_date, required: true,
                      data: { "timeline-form-target": "endDate" } %>
              </div>
              <br>
              <% if @moodle_timeline.category == 4 %>
                <div class="d-flex justify-content-center gap-4 mt-3">
                  <!-- AS1 -->
                  <div class="form-check">
                    <%= form.check_box :as1,
                        class: 'form-check-input',
                        checked: @moodle_timeline.as1 %>
                    <%= form.label :as1, class: 'form-check-label' %>
                  </div>

                  <!-- AS2 -->
                  <div class="form-check">
                    <%= form.check_box :as2,
                        class: 'form-check-input',
                        checked: @moodle_timeline.as2 %>
                    <%= form.label :as2, class: 'form-check-label' %>
                  </div>
                </div>
              <% end %>
              <!-- Submit Buttons -->
              <div class="d-flex justify-content-center gap-2 mt-3">
                <%= link_to "Back", timelines_path, class: "btn btn-secondary", style: 'border-radius: 10px;' %>
                <% if @edit %>
                  <%= form.submit 'Update Timeline', class: 'btn btn-primary',
                        style: 'border-radius: 10px;',
                        data: { "timeline-form-target": "submitButton" } %>
                <% else %>
                  <%= form.submit 'Create Timeline', class: 'btn btn-primary',
                        style: 'border-radius: 10px;',
                        data: { "timeline-form-target": "submitButton" } %>
                <% end %>
              </div>
            <% end %>

            <% if !@edit %>
              <div class="text-center mb-4">
                <br>
                <p><a href="<%= personalized_new_timelines_path %>" class="text-decoration-underline"> Do you want to create a personalized timeline?</a></p>
              </div>
            <% end %>

            <%= turbo_frame_tag "holidays" do %>
              <%= render "holidays" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
