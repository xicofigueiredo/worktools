<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Select Learner</h4>
        </div>
        <div class="card-body">
          <% if @learners.any? %>
            <div class="row">
              <% @learners.each do |learner| %>
                <div class="col-md-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="card-title"><%= learner.full_name %></h6>
                      <p class="card-text text-muted">
                        <small>
                          <strong>Hub:</strong> <%= learner.main_hub&.name || 'No hub assigned' %><br>
                          <strong>Email:</strong> <%= learner.email %>
                        </small>
                      </p>
                      <%= link_to "Select Learner",
                          select_timeline_exam_enrolls_path(learner_id: learner.id),
                          class: "btn btn-primary btn-sm" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <p class="text-muted">No learners found in your hub.</p>
              <%= link_to "Back to Exam Enrollments", exam_enrolls_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= link_to "Back to Exam Enrollments", exam_enrolls_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
