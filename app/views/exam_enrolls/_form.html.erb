<%= form_with(model: exam_enroll, local: true) do |f| %>
  <% if exam_enroll.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(exam_enroll.errors.count, "error") %> prohibited this enrollment from being saved:</h4>
      <ul>
        <% exam_enroll.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-header">
      <h5>Moodle Timeline</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12 mb-3">
          <%= f.label :moodle_timeline_id, "Select Moodle Timeline", class: "form-label" %>
          <%= f.collection_select :moodle_timeline_id, @moodle_timelines,
              :last, :first,
              { prompt: "Select a Moodle Timeline" },
              { class: "form-select" } %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h5>Learner Information</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :learner_name, "Learner's Name (as per ID)", class: "form-label" %>
          <%= f.text_field :learner_name, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :hub, class: "form-label" %>
          <%= f.text_field :hub, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :learner_id_type, "Learner's ID Type", class: "form-label" %>
          <%= f.select :learner_id_type,
              ["Passport", "Residence Card", "Citizen Card"],
              { prompt: "Select ID Type" },
              class: "form-select" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :learner_id_number, "Learner's ID Number", class: "form-label" %>
          <%= f.text_field :learner_id_number, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :date_of_birth, "Date of Birth", class: "form-label" %>
          <%= f.date_field :date_of_birth, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :gender, class: "form-label" %>
          <%= f.select :gender, ["Male", "Female"], { prompt: "Select Gender" }, class: "form-select" %>
        </div>
        <div class="col-md-4 mb-3">
          <div class="form-check mt-4">
            <%= f.check_box :native_language_english, class: "form-check-input" %>
            <%= f.label :native_language_english, "Native Language is English", class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h5>Learning Coach Information</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :learning_coach, "Learning Coach Name", class: "form-label" %>
          <%= f.text_field :learning_coach, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :learning_coach_email, "Learning Coach Email", class: "form-label" %>
          <%= f.email_field :learning_coach_email, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h5>Course Information</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :subject_name, class: "form-label" %>
          <%= f.text_field :subject_name, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :code, class: "form-label" %>
          <%= f.number_field :code, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>


  <div class="card mb-4">
    <div class="card-header">
      <h5>Exam Details</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :progress_cut_off, class: "form-label" %>
          <%= f.text_field :progress_cut_off, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :mock_results, class: "form-label" %>
          <%= f.text_field :mock_results, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :bga_exam_centre, "BGA Exam Centre", class: "form-label" %>
          <%= f.text_field :bga_exam_centre, class: "form-control" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :exam_board, class: "form-label" %>
          <%= f.text_field :exam_board, class: "form-control" %>
        </div>
        <div class="col-12 mb-3">
          <div class="form-check mb-2 d-flex justify-content-center">
            <div>
              <%= f.check_box :has_special_accommodations, class: "form-check-input" %>
            </div>
            <%= f.label :has_special_accommodations, "Requires Special Accommodations", class: "form-check-label" %>
          </div>
          <%= f.label :special_accommodations_personalized, "Special Accommodations Details", class: "form-label" %>
          <%= f.text_area :special_accommodations_personalized, class: "form-control", rows: 3 %>
        </div>
        <div class="col-12 mb-3">
          <%= f.label :additional_comments, class: "form-label" %>
          <%= f.text_area :additional_comments, class: "form-control", rows: 3 %>
        </div>
      </div>
    </div>
  </div>


  <div class="card mb-4">
    <div class="card-header">
      <h5>Extension Approval</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12 mb-3">
          <%= f.label :extension_justification, class: "form-label" %>
          <%= f.text_area :extension_justification, class: "form-control", rows: 3 %>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">Course Manager Approval</label>
          <%= f.hidden_field :extension_cm_approval, value: '', include_hidden: true %>
          <div class="btn-group" role="group" aria-label="CM Approval buttons">
            <%= f.radio_button :extension_cm_approval, "true", class: 'btn-check' %>
            <%= f.label :extension_cm_approval_true, 'Approve', class: 'btn btn-outline-success' %>

            <%= f.radio_button :extension_cm_approval, "false", class: 'btn-check' %>
            <%= f.label :extension_cm_approval_false, 'Reject', class: 'btn btn-outline-danger' %>
          </div>

          <div class="mt-3">
            <%= f.label :extension_cm_comment, "CM Comment", class: "form-label" %>
            <%= f.text_area :extension_cm_comment, class: "form-control", rows: 2 %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <label class="form-label">Education Team Approval</label>
          <%= f.hidden_field :extension_edu_approval, value: '', include_hidden: true %>
          <div class="btn-group" role="group" aria-label="EDU Approval buttons">
            <%= f.radio_button :extension_edu_approval, "true", class: 'btn-check' %>
            <%= f.label :extension_edu_approval_true, 'Approve', class: 'btn btn-outline-success' %>

            <%= f.radio_button :extension_edu_approval, "false", class: 'btn-check' %>
            <%= f.label :extension_edu_approval_false, 'Reject', class: 'btn btn-outline-danger' %>
          </div>

          <div class="mt-3">
            <%= f.label :extension_edu_comment, "EDU Comment", class: "form-label" %>
            <%= f.text_area :extension_edu_comment, class: "form-control", rows: 2 %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h5>Exception Approval</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-12 mb-3">
          <%= f.label :exception_justification, class: "form-label" %>
          <%= f.text_area :exception_justification, class: "form-control", rows: 3 %>
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">Course Manager Approval</label>
          <%= f.hidden_field :exception_cm_approval, value: '', include_hidden: true %>
          <div class="btn-group" role="group" aria-label="CM Approval buttons">
            <%= f.radio_button :exception_cm_approval, "true", class: 'btn-check' %>
            <%= f.label :exception_cm_approval_true, 'Approve', class: 'btn btn-outline-success' %>

            <%= f.radio_button :exception_cm_approval, "false", class: 'btn-check' %>
            <%= f.label :exception_cm_approval_false, 'Reject', class: 'btn btn-outline-danger' %>
          </div>

          <div class="mt-3">
            <%= f.label :exception_cm_comment, "CM Comment", class: "form-label" %>
            <%= f.text_area :exception_cm_comment, class: "form-control", rows: 2 %>
          </div>
        </div>

        <div class="col-md-6 mb-3">
          <label class="form-label">Education Team Approval</label>
          <%= f.hidden_field :exception_edu_approval, value: '', include_hidden: true %>
          <div class="btn-group" role="group" aria-label="EDU Approval buttons">
            <%= f.radio_button :exception_edu_approval, "true", class: 'btn-check' %>
            <%= f.label :exception_edu_approval_true, 'Approve', class: 'btn btn-outline-success' %>

            <%= f.radio_button :exception_edu_approval, "false", class: 'btn-check' %>
            <%= f.label :exception_edu_approval_false, 'Reject', class: 'btn btn-outline-danger' %>
          </div>

          <div class="mt-3">
            <%= f.label :exception_edu_comment, "EDU Comment", class: "form-label" %>
            <%= f.text_area :exception_edu_comment, class: "form-control", rows: 2 %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Back", exam_enrolls_path, class: "btn btn-secondary" %>
  </div>
<% end %>

<style>
  .btn-check {
  position: absolute;
  clip: rect(0,0,0,0);
  pointer-events: none;
}

.btn-check:checked + .btn-outline-success {
  color: #fff;
  background-color: #198754;
  border-color: #198754;
}

.btn-check:checked + .btn-outline-danger {
  color: #fff;
  background-color: #dc3545;
  border-color: #dc3545;
}

.btn-check:checked + .btn-outline-secondary {
  color: #fff;
  background-color: #6c757d;
  border-color: #6c757d;
}

.btn-group {
  display: flex;
  gap: 5px;
}
</style>
