              <%= f.hidden_field :poor_mock_result_exception_dc_approval, value: '', include_hidden: true %>
              <div class="btn-group" role="group" aria-label="DC Approval buttons">
                <%= f.radio_button :poor_mock_result_exception_dc_approval, "true", class: 'btn-check' %>
                <%= f.label :poor_mock_result_exception_dc_approval_true, 'Approve', class: 'btn btn-outline-success' %>

                <%= f.radio_button :poor_mock_result_exception_dc_approval, "false", class: 'btn-check' %>
                <%= f.label :poor_mock_result_exception_dc_approval_false, 'Reject', class: 'btn btn-outline-danger' %>
              </div>

              <div class="mt-3">
                <%= f.label :poor_mock_result_exception_dc_comment, "DC Comment", class: "form-label" %>
                <%= f.text_area :poor_mock_result_exception_dc_comment, class: "form-control", rows: 2 %>
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <label class="form-label">Education Team Approval</label>
              <%= f.hidden_field :poor_mock_result_exception_edu_approval, value: '', include_hidden: true %>
