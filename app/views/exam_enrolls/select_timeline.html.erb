<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Select Timeline for <%= @learner.full_name %></h4>
        </div>
        <div class="card-body">
          <% if @timelines.any? %>
            <div class="row">
              <% @timelines.each do |timeline| %>
                <div class="col-md-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="card-title"><%= timeline.personalized_name.presence || timeline.subject.name %></h6>
                      <p class="card-text text-muted">
                        <small>
                          <strong>Progress:</strong> <%= timeline.progress %>%<br>
                          <strong>Start Date:</strong> <%= timeline.start_date.strftime("%B %d, %Y") %><br>
                          <strong>End Date:</strong> <%= timeline.end_date.strftime("%B %d, %Y") %><br>
                          <% if timeline.exam_date.present? %>
                            <span class="badge bg-success">Exam date set: <%= timeline.exam_date.date.strftime("%B %Y") %></span>
                          <% else %>
                            <span class="badge bg-info">No exam date set</span>
                          <% end %>
                        </small>
                      </p>
                      <% if timeline.exam_date.present? %>
                        <%= link_to "Continue to Exam Registration",
                            new_exam_enroll_path(timeline_id: timeline.id),
                            class: "btn btn-primary btn-sm" %>
                      <% else %>
                        <%= link_to "Select Exam Date",
                            select_exam_date_exam_enrolls_path(timeline_id: timeline.id),
                            class: "btn btn-primary btn-sm" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <p class="text-muted">No available timelines found for <%= @learner.full_name %>.</p>
              <p class="text-muted"><small>Timelines must not already have an exam enrollment.</small></p>
              <%= link_to "Back to Learner Selection", select_learner_exam_enrolls_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= link_to "Back to Learner Selection", select_learner_exam_enrolls_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
