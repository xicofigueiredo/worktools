<div class="container mt-4">
  <div id="flash">
    <%= render "shared/flash" %>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <!-- Left side: Season name -->
    <div class="text-start" style="flex: 1;">
      <h4 class="mb-2">
        <%= @season[:name] %>
      </h4>
    </div>

    <!-- Center: Season navigation -->
    <div class="d-flex gap-2 justify-content-center" style="flex: 1;">
      <%= link_to exam_enrolls_path(date: @previous_season&.dig(:start_date), status: params[:status], hub: params[:hub], subject: params[:subject], exam_centre: params[:exam_centre]),
          class: "btn btn-outline-secondary rounded d-flex align-items-center #{@previous_season ? '' : 'disabled'}" do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>

      <%= link_to 'Current Season',
          exam_enrolls_path(status: params[:status], hub: params[:hub], subject: params[:subject], exam_centre: params[:exam_centre]),
          class: "btn btn-outline-secondary rounded d-flex align-items-center" %>

      <%= link_to exam_enrolls_path(date: @next_season&.dig(:start_date), status: params[:status], hub: params[:hub], subject: params[:subject], exam_centre: params[:exam_centre]),
          class: "btn btn-outline-secondary rounded d-flex align-items-center #{@next_season ? '' : 'disabled'}" do %>
        <i class="fa-solid fa-chevron-right"></i>
      <% end %>
    </div>

    <!-- Right side: Filters -->
    <div class="d-flex align-items-end gap-2 justify-content-end" style="flex: 1;">
      <%= form_with url: exam_enrolls_path, method: :get, local: true, class: "d-flex align-items-end gap-2", id: "filter-form" do |form| %>

        <!-- Hub Filter -->
        <div style="width: 150px;">
          <%= form.select :hub,
              options_for_select([['All Hubs', 'all']] + @available_hubs.map { |hub| [hub, hub] }, @current_hub),
              {},
              {
                class: "form-select",
                id: "hub-filter",
                onchange: "this.form.submit();"
              } %>
        </div>

        <!-- Subject Filter -->
        <div style="width: 150px;">
          <%= form.select :subject,
              options_for_select([['All Subjects', 'all']] + @available_subjects.map { |subject| [subject, subject] }, @current_subject),
              {},
              {
                class: "form-select",
                id: "subject-filter",
                onchange: "this.form.submit();"
              } %>
        </div>

        <!-- Exam Centre Filter (Admin only) -->
        <% if current_user.role == 'admin' || current_user.role == 'exams' %>
          <div style="width: 150px;">
            <%= form.select :exam_centre,
                options_for_select([['All Centres', 'all']] + @available_exam_centres.map { |centre| [centre, centre] }, @current_exam_centre),
                {},
                {
                  class: "form-select",
                  id: "exam-centre-filter",
                  onchange: "this.form.submit();"
                } %>
          </div>
        <% end %>

        <!-- Status Filter -->
        <div style="width: 150px;">
          <%= form.select :status,
              options_for_select([['All Status', 'all']] + @available_statuses.map { |status| [status, status] }, @current_status),
              {},
              {
                class: "form-select",
                id: "status-filter",
                onchange: "this.form.submit();"
              } %>
        </div>

        <!-- Preserve date parameter -->
        <%= form.hidden_field :date, value: params[:date] if params[:date].present? %>
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Exam Season</th>
              <th>Hub</th>
              <th>Name</th>
              <th>Subject</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @exam_enrolls.any? %>
              <% @exam_enrolls.each do |enrollment| %>
                <tr id="exam_enroll_<%= enrollment.id %>" data-exam-enroll-id="<%= enrollment.id %>">
                  <td><%= enrollment.display_exam_date %></td>
                  <td><%= enrollment.hub %></td>
                  <td><%= enrollment.learner_name %></td>
                  <td><%= enrollment.subject_name %></td>
                  <td>
                    <%= enrollment.status %>
                  </td>
                  <td>
                    <div class="d-flex justify-content-center">
                      <%= link_to exam_enroll_path(enrollment), class: "btn btn-sm btn-info me-1" do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                      <%= link_to edit_exam_enroll_path(enrollment), class: "btn btn-sm btn-warning me-1" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <% if current_user.role == "admin" || current_user.role == "lc" %>
                        <%= button_to exam_enroll_path(enrollment),
                            method: :delete,
                            form: {
                              data: {
                                turbo_confirm: "Are you sure?",
                                turbo_frame: "_top"
                              }
                            },
                            class: "btn btn-sm btn-danger" do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="11" class="text-center">
                  <p class="my-3 text-muted">No exam enrollments found for this sprint</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "New Exam Registration", select_learner_exam_enrolls_path, class: "btn btn-primary" %>

      </div>
    </div>
  </div>
</div>

<style>
.badge {
  font-size: 0.9em;
  padding: 0.5em 0.7em;
}
</style>
