<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
      <div class="text-center">
        <h4 class="mb-2">
          <%= @sprint.name %> <%= @sprint.start_date.strftime("%Y") %>
        </h4>
      </div>


    <div class="d-flex gap-2">
      <%= link_to exam_enrolls_path(date: @previous_sprint&.start_date),
          class: "btn btn-outline-secondary rounded d-flex align-items-center #{@previous_sprint ? '' : 'disabled'}" do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>

      <%= link_to 'This Sprint',
          exam_enrolls_path,
          class: "btn btn-outline-secondary rounded d-flex align-items-center" %>

      <%= link_to exam_enrolls_path(date: @next_sprint&.start_date),
          class: "btn btn-outline-secondary rounded d-flex align-items-center #{@next_sprint ? '' : 'disabled'}" do %>
        <i class="fa-solid fa-chevron-right"></i>
      <% end %>
    </div>
    <div class=" d-flex align-items-end gap-2 justify-content-end">
      <%= form_with url: exam_enrolls_path, method: :get, local: true, class: "d-flex align-items-end gap-2" do |form| %>
        <div class="flex-grow-1">
          <%= form.select :status,
              options_for_select([['All Statuses', 'all']] + @available_statuses.map { |status| [status, status] }, @current_status),
              {},
              { class: "form-select" } %>
        </div>
        <%= form.hidden_field :date, value: params[:date] if params[:date].present? %>
        <%= form.submit "Filter", class: "btn btn-primary" %>
      <% end %>
      <%# <%= link_to "New Exam", new_exam_enroll_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Exam Season</th>
              <th>Hub</th>
              <th>Name</th>
              <th>Subject</th>
              <th>Waiting</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @exam_enrolls.any? %>
              <% @exam_enrolls.each do |enrollment| %>
                <tr>
                  <td><%= enrollment.timeline.exam_date&.date&.strftime("%B %Y") %></td>
                  <td><%= enrollment.hub %></td>
                  <td><%= enrollment.learner_name %></td>
                  <td><%= enrollment.subject_name %></td>
                  <td><%= enrollment.exam_board %></td>
                  <td>
                    <%= enrollment.status %>
                  </td>
                  <td>
                    <div class="d-flex justify-content-center">
                      <%= link_to exam_enroll_path(enrollment), class: "btn btn-sm btn-info me-1" do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                      <%= link_to edit_exam_enroll_path(enrollment), class: "btn btn-sm btn-warning me-1" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <% if current_user.role == "admin" %>
                        <%= link_to exam_enroll_path(enrollment),
                            method: :delete,
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                            class: "btn btn-sm btn-danger" do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="11" class="text-center">
                  <p class="my-3 text-muted">No exam enrollments found for this sprint</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<style>
.badge {
  font-size: 0.9em;
  padding: 0.5em 0.7em;
}
</style>
