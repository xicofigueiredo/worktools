<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">New Holiday</h2>
          <%= simple_form_for(@holiday) do |f| %>
            <%= f.error_notification %>

            <div class="form-group" style="margin-bottom: 12px;">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group" style="margin-bottom: 12px;">
              <%= f.label :start_date %>
              <%= f.date_field :start_date, class: 'form-control' %>
            </div>

            <div class="form-group" style="margin-bottom: 12px;">
              <%= f.label :end_date %>
              <%= f.date_field :end_date, class: 'form-control' %>
            </div>

            <div class="d-flex justify-content-center  gap-2 mt-3">
              <%= link_to "Back", timelines_path, class: "btn btn-secondary", style: 'border-radius: 10px;' %>
              <%= f.submit 'Create Holiday', class: 'btn btn-primary', style: 'border-radius: 10px;' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
