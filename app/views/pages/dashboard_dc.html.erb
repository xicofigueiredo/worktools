<!-- app/views/pages/hub_selection.html.erb -->
<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <h2>Check Your Hubs Here!</h2>
  </div>
  <br>
  <% @hubs.each_slice(3) do |hubs_slice| %>
    <div class="row"> <!-- Start a new row for every slice of 3 hubs -->
      <% hubs_slice.each do |hub| %>
        <div class="col-md-4 mb-4"> <!-- Each hub takes up 4 columns in a 12-column grid -->
          <%= link_to dashboard_lc_path(hub_id: hub.id), class: "text-decoration-none" do %>
            <div class="card on-card-hover" style="border-radius: 10px;">
              <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                  <div class="mt-3">
                    <h4><%= hub.name.capitalize %> Hub</h4>
                    <p>Members: <%= hub.users.count %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div> <!-- End the row -->
  <% end %>
</div>
