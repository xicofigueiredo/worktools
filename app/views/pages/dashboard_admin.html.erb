<div class="container mt-5">
  <% @hubs.each do |hub| %>
    <h2><%= hub.name.capitalize %> Hub (<%= hub.users.count %>)</h2>
    <% hub.users.each_slice(3) do |users_slice| %>
      <div class="row mb-4">
        <% users_slice.each do |user| %>
          <div class="col-md-4 mb-4">
            <%= link_to learner_profile_path(user), class: "text-decoration-none" do %>
              <div class="card on-card-hover" style="border-radius: 10px;">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <%= image_tag "profile.jpeg", class: "rounded-circle", width: "150" %>
                    <div class="mt-3">
                      <h4> <%= user.full_name %></h4>
                      <% user.hubs.each do |hub| %>
                        <p><%= user.role.upcase %> at <%= hub.name %> Hub</p>
                      <% end %>
                      <p><%= user.email %></p>
                      <% if user.deactivate %>
                        <i class="fa-regular fa-eye-slash"></i>
                      <% else %>
                        <i class="fa-solid fa-eye"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
