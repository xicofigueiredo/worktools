<div class="container mt-5">
  <% @hubs.each do |hub| %>
    <h2><%= hub["name"] %> Hub (<%= hub["users_count"] %>)</h2>
    <div class="row mb-4">
      <% hub["users"].each do |user| %>
        <div class="col-md-4 mb-4">
          <%= link_to learner_profile_path(user["id"]), class: "text-decoration-none" do %>
            <div class="card on-card-hover" style="border-radius: 10px;">
              <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                  <%= image_tag "profile.jpeg", class: "rounded-circle", width: "150" %>
                  <div class="mt-3">
                    <h4> <%= user["full_name"] %></h4>
                    <% user["hubs"].each do |user_hub| %>
                      <p><%= user["role"].upcase %> at <%= user_hub["name"] %> Hub</p>
                    <% end %>
                    <p><%= user["email"] %></p>
                    <% if user["deactivate"] %>
                      <i class="fa-regular fa-eye-slash"></i>
                    <% else %>
                      <i class="fa-solid fa-eye"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
