<div class="container mt-5">
  <% @hubs.each do |hub| %>
    <h2><%= hub.name.capitalize %> Hub</h2>
    <% hub.users.each_slice(3) do |users_slice| %>
      <div class="row">
        <% users_slice.each do |user| %>
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                  <%= image_tag "profile.jpeg", class: "rounded-circle", width: "150" %>
                  <div class="mt-3">
                    <h4> <%= user.full_name %></h4>
                    <%user.hubs.each do |hub| %>
                      <p><%= user.role.upcase %> at <%= hub.name %> Hub</p>
                    <% end %>
                    <p><%= user.email %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
