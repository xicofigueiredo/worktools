<%= turbo_frame_tag "lp_kda" do %>
  <% previous_date = current_date - 7 %>
  <% next_date = current_date + 7 %>
  <% this_week_date = (Date.today.saturday? || Date.today.sunday?) ? Date.today - 2 : Date.today %>

  <div class="d-flex justify-content-between mb-3 align-items-center position-relative">
    <div>
      <h3><%= current_week.name %></h3>
    </div>

    <div class="d-flex gap-2 position-absolute top-50 start-50 translate-middle">
      <%= button_to change_kda_path(date: previous_date, current_week_id: current_week.id, learner_id: learner.id, current_date: current_date), method: :get, class: "btn btn-outline-secondary rounded d-flex align-items-center h-100", data: { turbo_frame: 'lp_kda' } do %>
        <i class="fa-solid fa-chevron-left"></i>
      <% end %>
      <%= button_to change_kda_path(date: this_week_date, current_week_id: current_week.id, learner_id: learner.id, current_date: current_date), method: :get, class: "btn btn-outline-secondary rounded d-flex align-items-center", data: { turbo_frame: 'lp_kda' } do %>
        This Week
      <% end %>
      <%= button_to change_kda_path(date: next_date, current_week_id: current_week.id, learner_id: learner.id, current_date: current_date), method: :get, class: "btn btn-outline-secondary rounded d-flex align-items-center h-100", data: { turbo_frame: 'lp_kda' } do %>
        <i class="fa-solid fa-chevron-right"></i>
      <% end %>
    </div>

    <div>
      <h3><%= @current_week_sprint_name %></h3>
    </div>
  </div>

  <% if kda.nil? %>
    <div class="d-flex flex-column gap-3 mt-5">
      <div class="text-center mb-5">
        <h2><%= learner.full_name %> has no KDA for <%= current_week.name %> - <%= @current_week_sprint_name %></h2>
      </div>
    </div>
  <% else %>
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="card shadow-sm mb-5" style="border-radius: 10px;">
          <div class="card-body">
            <br>
            <div class="container">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group text-center">
                    <strong>Start Date:</strong> <%= kda.week.start_date.strftime("%d/%m/%Y") %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group text-center">
                    <strong>End Date:</strong> <%= kda.week.end_date.strftime("%d/%m/%Y") %>
                  </div>
                </div>
              </div>
            </div>
            <div class="card shadow-sm mb-5" style="border-radius: 10px">
              <div class="px-2 mb-2">
                <table class="table">
                  <thead>
                    <tr>
                      <th class="pt-3">How well did you do, last week?	</th>
                      <th>Rating (0-5)</th>
                      <th>Why did you give yourself that rating? Provide two arguments.</th>
                      <th>How will you improve in each KDA, during this week? Give two strategies.</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Self-Directed Learning</td>
                      <td><%= kda.sdl.rating %></td>
                      <td><%= kda.sdl.why %></td>
                      <td><%= kda.sdl.improve %></td>
                    </tr>
                    <tr>
                      <td>Initiative</td>
                      <td><%= kda.ini.rating %></td>
                      <td><%= kda.ini.why %></td>
                      <td><%= kda.ini.improve %></td>
                    </tr>
                    <tr>
                      <td>Motivation</td>
                      <td><%= kda.mot.rating %></td>
                      <td><%= kda.mot.why %></td>
                      <td><%= kda.mot.improve %></td>
                    </tr>
                    <tr>
                      <td>P2P</td>
                      <td><%= kda.p2p.rating %></td>
                      <td><%= kda.p2p.why %></td>
                      <td><%= kda.p2p.improve %></td>
                    </tr>
                    <tr>
                      <td>Hub Participation</td>
                      <td><%= kda.hubp.rating %></td>
                      <td><%= kda.hubp.why %></td>
                      <td><%= kda.hubp.improve %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="d-flex justify-content-center gap-2" style="margin-left: 25px; margin-right: 25px;">
              <div class="col-md-6">
                <h4 class="d-flex justify-content-center">Reflection</h4>
                <p class="border p-2" style="min-height: 100px; white-space: pre-wrap; text-align: justify;"><%= kda.reflection if kda&.reflection %></p>
              </div>
              <div class="col-md-6">
                <h4 class="d-flex justify-content-center">LC Comment</h4>
                <p class="border p-2" style="min-height: 100px; white-space: pre-wrap; text-align: justify;"><%= kda.lc_comment if kda&.lc_comment %></p>
                <%= link_to "Edit", edit_kda_path(kda),
                  target: "_blank",
                  rel: "noopener noreferrer",
                  class: "btn btn-primary mr-2 d-flex justify-content-center",
                  style: 'border-radius: 10px;' %>
              </div>
            </div>
          </div> <!-- end card-body -->
        </div> <!-- end card -->
      </div>
    </div>
  <% end %>
<% end %>
