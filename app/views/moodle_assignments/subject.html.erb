<p>
  <strong>Category:</strong> <%= @subject.category_long_form rescue @subject.category %>
</p>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Moodle ID</th>
      <th class="text-right">Submissions</th>
    </tr>
  </thead>
  <tbody>
    <% @assignments_with_counts.each do |ma| %>
      <tr>
        <td><%= link_to ma.name, moodle_assignment_path(ma) %></td>
        <td><%= ma.moodle_id %></td>
        <td class="text-right"><%= ma.read_attribute(:submissions_count) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Back', moodle_assignments_path %></p>
