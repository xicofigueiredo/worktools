<div class="booking-container">
  <div class="booking-card">
    <div class="booking-header">
      <h2>Book a Visit to <%= @hub.name %></h2>
      <p class="text-muted">Schedule your experience with us in a few simple steps.</p>
    </div>

    <div class="progress-container">
      <div class="step-indicator active" id="step-1-indicator">1. Service</div>
      <div class="step-indicator" id="step-2-indicator">2. Date & Time</div>
      <div class="step-indicator" id="step-3-indicator">3. Details</div>
    </div>

    <%= form_with(model: [@hub, @visit], local: true, id: "booking-form") do |f| %>
      <%= f.hidden_field :visit_type, id: "hidden_visit_type" %>
      <%= hidden_field_tag :date, "", id: "hidden_date" %>
      <%= hidden_field_tag :time, "", id: "hidden_time" %>

      <div class="wizard-step active" id="step-1">
        <h4 class="mb-4">Select Service</h4>
        <div class="service-options">
          <div class="service-card" onclick="selectType('visit', this)">
            <div class="icon"><i class="fas fa-eye"></i></div>
            <div class="content">
              <h5>Hub Visit</h5>
              <p>Explore our learning environment and meet the team.</p>
              <span class="badge bg-primary">~ 1 Hour</span>
            </div>
          </div>

          <div class="service-card" onclick="selectType('trial', this)">
            <div class="icon"><i class="fas fa-graduation-cap"></i></div>
            <div class="content">
              <h5>Trial Day</h5>
              <p>Experience a full day as a BGA learner.</p>
              <span class="badge bg-success">~ 3 Hours</span>
            </div>
          </div>
        </div>
        <div class="step-actions mt-4 text-end">
          <button type="button" class="btn btn-primary px-4" onclick="nextStep(1)" disabled id="btn-step-1">Next Step <i class="fas fa-arrow-right ms-2"></i></button>
        </div>
      </div>

      <div class="wizard-step" id="step-2">
        <h4 class="mb-4">Select a Date & Time</h4>

        <div class="row g-4">
          <div class="col-md-6 border-end">
            <label class="form-label fw-bold mb-2">1. Choose a Day</label>
            <div id="flatpickr-container"></div>
          </div>

          <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <label class="form-label fw-bold mb-0">2. Choose a Time</label>
              <span class="badge bg-light text-dark border">
                <i class="far fa-clock me-1"></i> Local Hub Time
              </span>
            </div>

            <div id="slots-empty" class="text-center text-muted py-5">
              <i class="far fa-calendar-alt fa-2x mb-2"></i>
              <p>Select a date to see available times.</p>
            </div>

            <div id="slots-loader" class="text-center py-5" style="display:none;">
              <div class="spinner-border text-primary" role="status"></div>
              <p class="mt-2 small text-muted">Checking availability...</p>
            </div>

            <div id="slots-container" class="slots-grid"></div>

            <div id="no-slots-message" class="booking-alert text-center p-4 mt-3" style="display:none;">
              <div class="mb-2"><i class="fas fa-calendar-times fa-2x text-warning"></i></div>
              <h6 class="fw-bold">No Available Slots</h6>
              <p class="small text-muted mb-0">We are fully booked or closed on this date. Please try selecting another day.</p>
            </div>
          </div>
        </div>

        <div class="step-actions mt-4 d-flex justify-content-between">
          <button type="button" class="btn btn-outline-secondary" onclick="prevStep(2)">Back</button>
          <button type="button" class="btn btn-primary px-4" onclick="nextStep(2)" disabled id="btn-step-2">Next Step <i class="fas fa-arrow-right ms-2"></i></button>
        </div>
      </div>

      <div class="wizard-step" id="step-3">
        <h4 class="mb-3">Your Details</h4>
        <div class="p-3 bg-light rounded mb-4 border">
          <div class="d-flex align-items-center gap-3">
            <i class="fas fa-calendar-check text-success fa-2x"></i>
            <div>
              <div class="fw-bold" id="summary-type">Hub Visit</div>
              <div class="small text-muted">
                <span id="summary-date"></span> at <span id="summary-time"></span>
              </div>
            </div>
          </div>
        </div>

        <div class="row g-3">
          <div class="col-md-6">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control", required: true %>
          </div>
          <div class="col-md-6">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control", required: true %>
          </div>
          <div class="col-md-6">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true, pattern: "[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$" %>
          </div>
          <div class="col-md-6">
            <%= f.label :phone, class: "form-label" %>
            <%= f.text_field :phone, class: "form-control", required: true %>
          </div>
        </div>

        <h5 class="mt-4 mb-3">Learner Information</h5>
        <div class="row g-3">
          <div class="col-md-4">
            <%= f.label :learner_name, "Learner Name", class: "form-label" %>
            <%= f.text_field :learner_name, class: "form-control", required: true %>
          </div>
          <div class="col-md-4">
            <%= f.label :learner_age, "Age", class: "form-label" %>
            <%= f.number_field :learner_age, class: "form-control", required: true, min: 1 %>
          </div>
          <div class="col-md-4">
            <%= f.label :learner_academic_level, "Grade/Year", class: "form-label" %>
            <%= f.select :learner_academic_level, ["Grade 6 (Year 7)", "Grade 7 (Year 8)", "Grade 8 (Year 9)", "Grade 9 (Year 10)", "Grade 10 (Year 11)", "Grade 11 (Year 12)", "Grade 12 (Year 13)"], { include_blank: "Select Level" }, { class: "form-select", required: true } %>
          </div>
          <div class="col-12">
            <%= f.label :special_requests, "Notes / Special Requests", class: "form-label" %>
            <%= f.text_area :special_requests, class: "form-control", rows: 2 %>
          </div>
        </div>

        <div class="step-actions mt-4 border-top pt-3 d-flex justify-content-between">
          <button type="button" class="btn btn-outline-secondary" onclick="prevStep(3)">Back</button>
          <button type="submit" class="btn btn-success px-4" id="btn-submit">Confirm Booking</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  body {
    background-image: url('/backgrounds/green_with_faces.webp');
    background-size: auto;
    background-position: 20% center;
    background-attachment: fixed;
    background-color: #f3f4f6;
  }

  .booking-container {
    max-width: 900px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .booking-card {
    background: rgba(255, 255, 255);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.2);
    padding: 40px;
  }
  .booking-header { text-align: center; margin-bottom: 30px; }
  .booking-alert { background: #fff3cd; border: 1px solid #ffecb5; border-radius: 8px; color: #664d03; }

  /* Progress Bar */
  .progress-container { display: flex; justify-content: space-between; margin-bottom: 40px; border-bottom: 2px solid #e5e7eb; padding-bottom: 15px; }
  .step-indicator { font-weight: 600; color: #9ca3af; font-size: 0.95rem; }
  .step-indicator.active { color: #2563eb; }

  /* Wizard */
  .wizard-step { display: none; }
  .wizard-step.active { display: block; animation: fadeIn 0.4s ease; }
  @keyframes fadeIn { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }

  /* Service Cards */
  .service-options { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
  .service-card { border: 2px solid #e5e7eb; border-radius: 8px; padding: 25px; cursor: pointer; transition: all 0.2s; display: flex; align-items: flex-start; gap: 15px; }
  .service-card:hover { border-color: #93c5fd; background: #f8fafc; }
  .service-card.selected { border-color: #2563eb; background: #eff6ff; box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1); }
  .service-card .icon { font-size: 2rem; color: #2563eb; margin-top: 5px; }

  /* Slots Grid */
  .slots-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(90px, 1fr)); gap: 10px; margin-top: 10px; }
  .time-slot-btn { border: 1px solid #d1d5db; color: #374151; background: white; padding: 8px; border-radius: 6px; font-weight: 600; width: 100%; transition: all 0.2s; font-size: 0.9rem; }
  .time-slot-btn:hover { border-color: #2563eb; color: #2563eb; background: #f0f9ff; }
  .time-slot-btn.selected { background: #2563eb; color: white; border-color: #2563eb; }

  /* Flatpickr Customization */
  .flatpickr-calendar { box-shadow: none !important; border: 1px solid #e5e7eb !important; margin: 0 auto; }

  @media(max-width: 768px) {
    .service-options { grid-template-columns: 1fr; }
    .col-md-6.border-end { border-right: none !important; border-bottom: 1px solid #e5e7eb; padding-bottom: 20px; margin-bottom: 20px; }
  }
</style>

<script>
  let currentStep = 1;
  const hubId = "<%= @hub.id %>";

  // Convert Ruby array to JS array for disabling dates
  const blackoutDates = <%= @blackout_dates.to_json.html_safe %>;
  const allowedDays = <%= @allowed_days.to_json.html_safe %>; // e.g. [1, 2, 3] for Mon, Tue, Wed

  let bookingData = { type: null, date: null, time: null };
  let fpInstance = null;

  // --- Step 1: Type Selection ---
  function selectType(type, element) {
    bookingData.type = type;
    document.getElementById('hidden_visit_type').value = type;

    document.querySelectorAll('.service-card').forEach(el => el.classList.remove('selected'));
    element.classList.add('selected');
    document.getElementById('btn-step-1').disabled = false;
  }

  // --- Step 2: Date & Time Logic ---
  document.addEventListener("DOMContentLoaded", function() {
    // Initialize Flatpickr (Inline)
    fpInstance = flatpickr("#flatpickr-container", {
      inline: true,
      minDate: new Date().getTime() + 24 * 60 * 60 * 1000,
      // Disable logic: Block blackout dates AND days not in allowedDays
      disable: [
        function(date) {
          // 1. Disable if day is not in Allowed Days (Open Days)
          // date.getDay() returns 0 (Sun) to 6 (Sat)
          if (allowedDays.length > 0 && !allowedDays.includes(date.getDay())) {
            return true;
          }

          // 2. Disable Holidays/Blocked Periods/Mandatory Leaves
          const dateString = date.toISOString().split('T')[0];
          return blackoutDates.includes(dateString);
        }
      ],
      onChange: function(selectedDates, dateStr, instance) {
        bookingData.date = dateStr;
        document.getElementById('hidden_date').value = dateStr;
        fetchSlots(); // Trigger AJAX
      }
    });
  });

  function fetchSlots() {
    const container = document.getElementById('slots-container');
    const loader = document.getElementById('slots-loader');
    const empty = document.getElementById('slots-empty');
    const noSlots = document.getElementById('no-slots-message');
    const btnNext = document.getElementById('btn-step-2');

    // Reset UI
    container.innerHTML = '';
    empty.style.display = 'none';
    noSlots.style.display = 'none';
    loader.style.display = 'block';
    btnNext.disabled = true;
    bookingData.time = null;

    const url = `/hubs/${hubId}/hub_visits/available_slots?date=${bookingData.date}&visit_type=${bookingData.type}`;

    fetch(url)
      .then(res => res.json())
      .then(data => {
        loader.style.display = 'none';
        if (data.slots && data.slots.length > 0) {
          data.slots.forEach(time => {
            const btn = document.createElement('button');
            btn.type = 'button';
            btn.className = 'time-slot-btn';
            btn.textContent = time;
            btn.onclick = () => selectTime(time, btn);
            container.appendChild(btn);
          });
        } else {
          noSlots.style.display = 'block';
        }
      })
      .catch(err => {
        loader.style.display = 'none';
        empty.style.display = 'block'; // Fallback
        alert("Error fetching slots.");
      });
  }

  function selectTime(time, btn) {
    bookingData.time = time;
    document.getElementById('hidden_time').value = time;

    document.querySelectorAll('.time-slot-btn').forEach(el => el.classList.remove('selected'));
    btn.classList.add('selected');
    document.getElementById('btn-step-2').disabled = false;
  }

  // --- Navigation & Summary ---
  function nextStep(current) {
    if (current === 2) {
      document.getElementById('summary-type').textContent = bookingData.type === 'visit' ? 'Hub Visit' : 'Trial Day';
      document.getElementById('summary-date').textContent = bookingData.date;
      document.getElementById('summary-time').textContent = bookingData.time;
    }
    showStep(current + 1);
  }

  function prevStep(current) {
    showStep(current - 1);
  }

  function showStep(step) {
    document.querySelectorAll('.wizard-step').forEach(el => el.classList.remove('active'));
    document.querySelectorAll('.step-indicator').forEach(el => el.classList.remove('active'));

    document.getElementById(`step-${step}`).classList.add('active');
    for(let i = 1; i <= step; i++) {
      document.getElementById(`step-${i}-indicator`).classList.add('active');
    }
    currentStep = step;
  }

  // --- Submission ---
  document.getElementById("booking-form").addEventListener("submit", function(e) {
    e.preventDefault();
    const btn = document.getElementById("btn-submit");
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Processing...';

    const formData = new FormData(this);

    fetch(this.action, {
      method: 'POST',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Accept': 'application/json'
      },
      body: formData
    })
    .then(r => r.json())
    .then(data => {
      if(data.success) {
        document.querySelector('.booking-card').innerHTML = `
          <div class="text-center py-5">
            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
            <h3 class="mt-4">Request Received</h3>
            <p class="text-muted mb-4 px-4">Your booking request has been received.</p>
          </div>`;
      } else {
        alert("Error: " + data.errors.join(", "));
        btn.disabled = false;
        btn.textContent = "Confirm Booking";
      }
    })
    .catch(err => {
      console.error(err);
      alert("Something went wrong. Please try again.");
      btn.disabled = false;
      btn.textContent = "Confirm Booking";
    });
  });
</script>
