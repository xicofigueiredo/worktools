<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-11">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center"><%= @weekly_meeting.week.name %></h1>

          <div class="container">
            <div class="row">
              <div class="col-md-2">
                <div class="form-group text-center">
                  <strong>Hub:</strong> <%= @weekly_meeting.hub.name %>
                </div>
              </div>
              <div class="col-md-8">
                <div class="form-group text-center">
                  <strong>Week Start Date:</strong> <%= @weekly_meeting.week.start_date %>
                  <br>
                  <strong>Week End Date:</strong> <%= @weekly_meeting.week.end_date %>
                </div>
              </div>
            </div>
          </div>

          <div class="pt-4">
            <div class="container">
              <div class="table-responsive">
                <table class="table table-bordered text-center">
                  <thead>
                    <tr class="bg-gray">
                      <th class="text-uppercase">Meeting Time</th>
                      <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'].each do |day| %>
                        <th class="text-uppercase"><%= day %></th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @meeting_times.each do |meeting_time| %>
                      <tr>
                        <td class="align-middle"><%= meeting_time %></td>
                        <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'].each do |day| %>
                          <td>
                            <% meeting = @weekly_meeting.meetings.find { |m| m.day_of_week == day && m.meeting_time == meeting_time } %>
                            <% if meeting %>
                          <% if meeting.lc.present? %>
                            LC: <%= meeting.lc.full_name %><br>
                          <% end %>
                          <% if meeting.learner.present? %>
                            Learner: <%= meeting.learner.full_name %>
                          <% end %>
                          <% if meeting.lc.blank? && meeting.learner.blank? %>
                            <%= '' %>
                          <% end %>
                        <% else %>
                          <%= '' %>
                        <% end %>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="text-center">
            <%= link_to "Edit", edit_weekly_meeting_path(@weekly_meeting), class: "btn btn-primary mr-2" %>
            <%= link_to "Back", weekly_meetings_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
