<% content_for :title, "Local Monthly Submissions - #{@subject.name}" %>

<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
          <div>
            <h6>Local Monthly Submissions for <%= @subject.name %></h6>
            <p class="text-sm mb-0">Using locally stored assignments (since January 2022). Auto-graded (< 5min) excluded.</p>
          </div>
          <div>
            <%= link_to "Back to Assignments", assignments_path(moodle_id: @subject.moodle_id, load_course_data: 1), class: "btn btn-secondary btn-sm" %>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <% @monthly_stats.each do |stat| %>
                    <th class="text-center text-xs font-weight-bold" style="min-width: 80px;">
                      <%= stat[:month] %>
                    </th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @monthly_stats.each do |stat| %>
                    <td class="text-center">
                      <% if stat[:submissions_count] > 0 %>
                        <span class="badge bg-primary text-white">
                          <%= stat[:submissions_count] %>
                        </span>
                      <% else %>
                        <span class="text-muted">0</span>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
                <tr>
                  <% @monthly_stats.each do |stat| %>
                    <td class="text-center">
                      <% if stat[:avg_sla_days].to_f > 0 %>
                        <span class="badge bg-info text-dark" title="Average business days between submission and feedback">
                          <%= stat[:avg_sla_days] %>
                        </span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="row mt-4">
            <div class="col-md-4">
              <div class="card bg-gradient-info">
                <div class="card-body text-dark text-center">
                  <h4 class="text-dark"><%= @monthly_stats.sum { |s| s[:submissions_count] } %></h4>
                  <p class="mb-0 text-dark">Total Submissions</p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card bg-gradient-success">
                <div class="card-body text-dark text-center">
                  <h4 class="text-dark"><%= @monthly_stats.count { |s| s[:submissions_count] > 0 } %></h4>
                  <p class="mb-0 text-dark">Active Months</p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card bg-gradient-warning">
                <div class="card-body text-dark text-center">
                  <h4 class="text-dark"><%= (@monthly_stats.sum { |s| s[:submissions_count] } / @monthly_stats.count { |s| s[:submissions_count] > 0 }.to_f).round(1) rescue 0 %></h4>
                  <p class="mb-0 text-dark">Avg per Active Month</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
