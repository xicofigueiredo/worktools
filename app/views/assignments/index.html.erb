<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">ðŸ“‹ Assignment Management</h3>
        </div>
        <div class="card-body">

          <!-- Step 1: Subject Selection -->
          <%= form_with url: assignments_path, method: :get, local: true, id: "subject_form" do |form| %>
            <div class="row mb-4">
              <div class="col-md-4">
                <%= form.select :moodle_id,
                    options_from_collection_for_select(@subjects, :moodle_id, :name, params[:moodle_id]),
                    { prompt: "Select a Subject..." },
                    { class: "form-control", id: "subject_select" } %>
              </div>

              <div class="col-md-3">
                <%= form.submit "Load Course Data",
                    name: "load_course_data",
                    class: "btn btn-info",
                    id: "load_course_button",
                    disabled: !params[:moodle_id].present? %>
              </div>
            </div>
          <% end %>

          <!-- Step 2: Learner Selection (only shown after course data is loaded) -->
          <% if @course_data_loaded %>
            <%= form_with url: assignments_path, method: :get, local: true, id: "learner_form" do |form| %>
              <%= form.hidden_field :moodle_id, value: params[:moodle_id] %>
              <%= form.hidden_field :load_course_data, value: "1" %>

              <div class="row mb-4">
                <div class="col-md-4">
                  <% if @course_learners&.any? %>
                    <%= form.select :learner_moodle_id,
                        options_for_select(
                          [["Select a Learner...", ""]] +
                          @course_learners.map { |learner| [learner[:name], learner[:moodle_id]] },
                          params[:learner_moodle_id]
                        ),
                        {},
                        { class: "form-control", id: "learner_select" } %>
                  <% else %>
                    <%= form.select :learner_moodle_id,
                        [["No learners found", ""]],
                        {},
                        { class: "form-control", disabled: true } %>
                  <% end %>
                </div>

                <div class="col-md-3">
                  <%= form.submit "Load Assignments",
                      class: "btn btn-primary",
                      id: "load_assignments_button",
                      disabled: !@course_learners&.any? %>
                </div>

                <div class="col-md-5">
                  <div class="alert alert-success mb-0 py-2">
                    <small>
                      âœ… Course data loaded: <strong><%= @course_learners&.size || 0 %> learners</strong> found
                    </small>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>

          <!-- Results Section -->
          <% if @selected_subject %>
            <div class="alert alert-info">
              <strong>Subject:</strong> <%= @selected_subject.name %>
              <small>(Course ID: <%= @course_id %>)</small>
              <% if @selected_learner %>
                <br>
                <strong>Learner:</strong> <%= @selected_learner[:name] %>
                <small>(<%= @selected_learner[:email] %>)</small>
              <% end %>
            </div>

            <% if @learner_assignment_data&.any? %>
              <!-- Individual Learner Assignment Table -->
              <div class="table-responsive">
                <table class="table table-striped table-bordered">
                  <thead class="table-dark">
                    <tr>
                      <th>Assignment Name</th>
                      <th>Submission Date</th>
                      <th>Feedback Date</th>
                      <th>Grade</th>
                      <th>Attempts</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @learner_assignment_data.each do |assignment_name, data| %>
                      <tr>
                        <td>
                          <strong><%= assignment_name %></strong>
                        </td>
                        <td>
                          <% if data[:submission_date] != 'No submission' %>
                            <span class="badge bg-success">
                              <%= begin
                                    Time.at(data[:submission_date].to_i).strftime("%d/%m/%Y %H:%M")
                                  rescue
                                    data[:submission_date]
                                  end %>
                            </span>
                          <% else %>
                            <span class="badge bg-danger">Not submitted</span>
                          <% end %>
                        </td>
                        <td>
                          <% if data[:feedback_date] != 'No feedback' %>
                            <span class="badge bg-info">
                              <%= begin
                                    Time.at(data[:feedback_date].to_i).strftime("%d/%m/%Y %H:%M")
                                  rescue
                                    data[:feedback_date]
                                  end %>
                            </span>
                          <% else %>
                            <span class="badge bg-secondary">No feedback</span>
                          <% end %>
                        </td>
                        <td>
                          <% if data[:grade] > 0 %>
                            <span class="badge bg-primary fs-6"><%= data[:grade] %></span>
                          <% else %>
                            <span class="text-muted">-</span>
                          <% end %>
                        </td>
                        <td>
                          <span class="badge bg-warning"><%= data[:attempts] %></span>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot class="table-secondary">
                    <tr>
                      <th>Summary</th>
                      <th>
                        <small>
                          <%= @learner_assignment_data.count { |_, data| data[:submission_date] != 'No submission' } %>
                          submitted
                        </small>
                      </th>
                      <th>
                        <small>
                          <%= @learner_assignment_data.count { |_, data| data[:feedback_date] != 'No feedback' } %>
                          with feedback
                        </small>
                      </th>
                      <th>
                        <small>
                          <%
                            individual_grades = @learner_assignment_data.values.map { |data| data[:grade] }.select { |g| g > 0 }
                            individual_avg = individual_grades.any? ? (individual_grades.sum / individual_grades.size.to_f).round(2) : 0
                          %>
                          Avg: <%= individual_avg %>
                        </small>
                      </th>
                      <th>
                        <small>
                          Total: <%= @learner_assignment_data.values.sum { |data| data[:attempts] } %>
                        </small>
                      </th>
                    </tr>
                  </tfoot>
                </table>
              </div>

              <!-- Summary Cards -->
              <div class="row mt-4">
                <div class="col-md-3">
                  <div class="card text-center border-success">
                    <div class="card-body">
                      <h6 class="text-success">Assignments Submitted</h6>
                      <h4 class="text-success">
                        <%= @learner_assignment_data.count { |_, data| data[:submission_date] != 'No submission' } %>
                      </h4>
                      <small>out of <%= @learner_assignment_data.size %></small>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card text-center border-primary">
                    <div class="card-body">
                      <h6 class="text-primary">Average Grade</h6>
                      <h4 class="text-primary"><%= individual_avg %></h4>
                      <small><%= individual_grades.size %> graded assignments</small>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card text-center border-warning">
                    <div class="card-body">
                      <h6 class="text-warning">Total Attempts</h6>
                      <h4 class="text-warning">
                        <%= @learner_assignment_data.values.sum { |data| data[:attempts] } %>
                      </h4>
                      <small>total attempts made</small>
                    </div>
                  </div>
                </div>
              </div>

            <% elsif @course_data_loaded %>
              <div class="alert alert-warning">
                <h5>No Assignment Data Found</h5>
                <p>
                  <% if @selected_learner %>
                    No assignment data available for <strong><%= @selected_learner[:name] %></strong> in <strong><%= @selected_subject.name %></strong>.
                  <% else %>
                    Please select a learner to view assignment data.
                  <% end %>
                </p>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-secondary">
              <h5>ðŸ‘† Select a Subject</h5>
              <p>Choose a subject from the dropdown above and click "Load Course Data" to begin.</p>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const subjectSelect = document.getElementById('subject_select');
  const loadCourseButton = document.getElementById('load_course_button');
  const learnerSelect = document.getElementById('learner_select');
  const loadAssignmentsButton = document.getElementById('load_assignments_button');

  // Enable/disable "Load Course Data" button based on subject selection
  function updateLoadCourseButton() {
    if (loadCourseButton) {
      const subjectSelected = subjectSelect.value !== '';
      loadCourseButton.disabled = !subjectSelected;
      loadCourseButton.textContent = subjectSelected ? 'Load Course Data' : 'Select Subject First';
    }
  }

  // Enable/disable "Load Assignments" button based on learner selection
  function updateLoadAssignmentsButton() {
    if (loadAssignmentsButton && learnerSelect) {
      const learnerSelected = learnerSelect.value !== '';
      loadAssignmentsButton.disabled = !learnerSelected;
      loadAssignmentsButton.textContent = learnerSelected ? 'Load Assignments' : 'Select Learner First';
    }
  }

  // Event listeners
  if (subjectSelect) {
    subjectSelect.addEventListener('change', updateLoadCourseButton);
  }

  if (learnerSelect) {
    learnerSelect.addEventListener('change', updateLoadAssignmentsButton);
  }

  // Initial button states
  updateLoadCourseButton();
  updateLoadAssignmentsButton();
});
</script>
