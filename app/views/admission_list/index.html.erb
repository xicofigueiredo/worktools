          <div class="slider-track"></div>

          <%= range_field_tag :age_min, params[:age_min] || 0, min: 0, max: 50,
                id: "age_min",
                data: { action: "input->admission-search#searchInput" },
                oninput: "updateAgeDisplay()" %>

          <%= range_field_tag :age_max, params[:age_max] || 50, min: 0, max: 50,
                id: "age_max",
                data: { action: "input->admission-search#searchInput" },
                oninput: "updateAgeDisplay()" %>
        </div>
