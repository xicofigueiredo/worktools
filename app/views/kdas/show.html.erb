<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">KDA Details</h2>

          <div class="field">
            <strong><%= @kda.week.name %></strong>
          </div>

          <hr>

          <% @kda.kdas_questions.includes(:question, :answers).each do |kdas_question| %>
            <br>
            <h3><%= kdas_question.question.value %></h3>
            <br>
            <% kdas_question.answers.each do |answer| %>
            <br>
              <div class="field">
                <strong><%= answer.readable_answer_type(answer.answer_type) %>:</strong> <%= answer.value %>
              </div>
            <% end %>
            <hr>
          <% end %>

          <div class="text-center">
            <%= link_to 'Edit', edit_kda_path(@kda), class: "btn btn-primary mr-2" %>
            <%= link_to 'Back', kdas_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
