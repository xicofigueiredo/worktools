<div class="container mt-3">
  <div class="d-flex justify-content-between mb-3 align-items-center position-relative">

    <div class="d-flex">
      <h1><%= @current_week.name if @current_week %></h1>
    </div>

    <div class="d-flex gap-2 position-absolute top-50 start-50 translate-middle">
      <%= link_to '<i class="fa-solid fa-chevron-left"></i>'.html_safe, kdas_path(date: @date - 7), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
      <%= link_to 'This Week', kdas_path(date: Date.today), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
      <%= link_to '<i class="fa-solid fa-chevron-right"></i>'.html_safe, kdas_path(date: @date + 7), class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
    </div>

    <div>
      <h1><%= @current_week.sprint.name if @current_week %></h1>
    </div>
  </div>

  <% if !@kda %>
    <div class="d-flex flex-column gap-3 mt-5">
      <div class="text-center">
        <h1>There are no KDAs for <%= @current_week.name if @current_week %> - <%= @current_week.sprint.name if @current_week %></h1>
        <p>Click on the button below to create your KDAs for this week.</p>
      </div>
      <div class="d-flex justify-content-center">
        <% if @current_week %>
          <%= link_to "New KDA", new_kda_path(date: @current_week.start_date), class: "btn btn-primary mb-3", style: "border-radius: 10px;" %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="card shadow-sm mb-5" style="border-radius: 10px">
      <div class="px-2 mb-2">
        <table class="table">
          <thead>
            <tr>
              <th class="pt-3">How well did you do, last week?	</th>
              <th>Rating (0-5)</th>
              <th>Why did you give yourself that rating? Provide two arguments.</th>
              <th>How will you improve in each KDA, during this week? Give two strategies.</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Self-Directed Learning</td>
              <td><%= @kda.sdl.rating %></td>
              <td><%= @kda.sdl.why %></td>
              <td><%= @kda.sdl.improve %></td>
            </tr>
            <tr>
              <td>Initiative</td>
              <td><%= @kda.ini.rating %></td>
              <td><%= @kda.ini.why %></td>
              <td><%= @kda.ini.improve %></td>
            </tr>
            <tr>
              <td>Motivation</td>
              <td><%= @kda.mot.rating %></td>
              <td><%= @kda.mot.why %></td>
              <td><%= @kda.mot.improve %></td>
            </tr>
            <tr>
              <td>P2P</td>
              <td><%= @kda.p2p.rating %></td>
              <td><%= @kda.p2p.why %></td>
              <td><%= @kda.p2p.improve %></td>
            </tr>
            <tr>
              <td>Hub Participation</td>
              <td><%= @kda.hubp.rating %></td>
              <td><%= @kda.hubp.why %></td>
              <td><%= @kda.hubp.improve %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center gap-2" style="margin-left: 25px; margin-right: 25px;">
        <div class="col-md-6">
          <h4 class="d-flex justify-content-center">Reflection</h4>
          <p class="border p-2" style="min-height: 100px; white-space: pre-wrap; text-align: justify;"><%= @kda.reflection %></p>
        </div>
        <div class="col-md-6">
          <h4 class="d-flex justify-content-center">LC Comment</h4>
          <p class="border p-2" style="min-height: 100px; white-space: pre-wrap; text-align: justify;"><%= @kda.lc_comment %></p>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center mb-3">
      <% if @current_week %>
        <%= link_to 'Edit KDA', edit_kda_path(@kda), class: "btn btn-primary", style: 'border-radius: 10px;' %>
      <% end %>
    </div>


  <% end %>



</div>
