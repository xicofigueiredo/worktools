<!DOCTYPE html>
<html>
  <head>
    <% current_user ? name = current_user.role.capitalize + "'s " : '' %>
    <title><%= name %>Worktools</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path("icons100.png") %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_path("icons32.png") %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_path("icons16.png") %>">
  </head>

  <body>
     <% if current_user.present? %>
      <% if current_user.role == "lc"%>
        <%= render "shared/lc_navbar" %>
      <% elsif current_user.role == "cm"  %>
        <%= render "shared/cm_navbar" %>
      <% elsif current_user.role == "admin" %>
        <%= render "shared/admin_navbar" %>
      <% elsif current_user.role == "guardian" %>
        <%= render "shared/parent_navbar" %>
      <% else %>
        <%= render "shared/navbar" %>
      <% end %>
    <% else %>
      <%= render "shared/navbar" %>
    <% end %>

    <div class="d-flex justify-content-center align-items-center">
      <%# <%= notice if notice %>
      <%= alert if alert %>
      <br>
      <% if @unread_notifications.any? %>
        <div class="alert alert-warning alert-dismissible fade show" style="margin-top: 10px;"role="alert">
          <h5>You have <%= @unread_notifications.size %> unresolved notification(s):</h5>
          <ul>
            <% @unread_notifications.each do |notification| %>
              <li>
                <%= notification.message %>
                <small class="text-muted">(<%= time_ago_in_words(notification.created_at) %> ago)</small>
                <%= button_to "Mark as resolved", mark_as_read_notification_path(notification), method: :patch, class: "btn btn-sm btn-success" %>
              </li>
            <% end %>
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>

    <%= turbo_frame_tag "modal" %>
    <%= yield %>
  </body>
</html>
