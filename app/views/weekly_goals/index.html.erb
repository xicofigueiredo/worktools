<div class="d-flex justify-content-between mb-3 align-items-center position-relative">

  <div class="d-flex">
    <h1>Week <%=@week_number%></h1>
  </div>

  <div class="d-flex gap-2 position-absolute top-50 start-50 translate-middle">
    <%= link_to '<i class="fa-solid fa-chevron-left"></i>'.html_safe, '#', class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
    <%= link_to 'Today', '#', class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
    <%= link_to '<i class="fa-solid fa-chevron-right"></i>'.html_safe, '#', class: "btn btn-outline-secondary rounded d-flex align-items-center" %>
  </div>
</div>

<% if @weekly_goals.empty? %>
  <%= link_to "New Weekly Goal", new_weekly_goal_path, class: "btn btn-primary mb-3" %>
<% else %>
  <% @weekly_goals.each do |weekly_goal| %>
    <div class="card mb-3">
      <div class="card-body">
        <p class="card-text">
          <strong><%= weekly_goal.week.name %> (<%= weekly_goal.week.sprint.name %>)</strong><br>
          <strong>Start Date:</strong> <%= weekly_goal.week.start_date %><br>
          <strong>End Date:</strong> <%= weekly_goal.week.end_date %>
        </p>
        <%= link_to "Show", weekly_goal_path(weekly_goal), class: "btn btn-primary mr-2" %>
        <%# <%= link_to "Edit", edit_weekly_goal_path(weekly_goal), class: "btn btn-secondary mr-2 disabled" %>
        <%= link_to "Delete", weekly_goal_path(weekly_goal), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger", style: "color: white;" %>
      </div>
    </div>
  <% end %>
<% end %>
