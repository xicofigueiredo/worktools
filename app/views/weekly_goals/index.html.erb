<%= link_to "New Weekly Goal", new_weekly_goal_path, class: "btn btn-primary mb-3" %>

<% @weekly_goals.each do |weekly_goal| %>
  <div class="card mb-3">
    <div class="card-body">
      <p class="card-text">
        <strong><%= weekly_goal.week.name%></strong><br>
        <strong>Start Date:</strong> <%= weekly_goal.week.start_date %><br>
        <strong>End Date:</strong> <%= weekly_goal.week.end_date %>
      </p>
      <%= link_to "Show", weekly_goal_path(weekly_goal), class: "btn btn-primary mr-2" %>
      <%= link_to "Edit", edit_weekly_goal_path(weekly_goal), class: "btn btn-secondary mr-2 disabled" %>
      <%= link_to "Delete", weekly_goal_path(weekly_goal), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger", style: "color: white;" %>
    </div>
  </div>
<% end %>
